<div class="container">
<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<i class="<%= @task.completed ? 'far fa-check-square' : 'far fa-square' %>"></i>
<%= @task.completed ? "This task is completed" : "This task has not been completed yet" %>
<br>
<%= link_to "Edit this task", edit_path %>
<%= link_to "Back to list", tasks_path(@task) %>
</div>
